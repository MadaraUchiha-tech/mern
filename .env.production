# Backend environment variables
# Copy this to .env and fill in YOUR values (don't commit .env with real secrets)

# MongoDB connection string (from MongoDB Atlas)
MONGODB_URI=

# Server port
PORT=8000

# JWT secret for authentication
JWT_SECRET=

# Cloudinary credentials (for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_SECRET_KEY=

# Environment
NODE_ENV=development

# Frontend URL (for CORS allowlist in production)
FRONTEND_URL=https://chatapplication-roan.vercel.app

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=https://chatapplication-roan.vercel.app

# Whether to serve frontend bundle from backend (set to 'true' only if deploying together)
SERVE_CLIENT=false
